@model IEnumerable<Tema>


<h1>Témák</h1>

<div class="card-deck">
    @foreach (Tema item in Model)
    {
        <a asp-controller="Messages"  asp-action="Tema" asp-route-tema="@item" class="card p-3 m-2">
            <div class="card-body">
                <h5 class="card-title text-center"> @Html.DisplayFor(m => item) </h5>
            </div>
        </a>
    }
</div>

