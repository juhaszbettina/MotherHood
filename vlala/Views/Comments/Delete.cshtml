@model MotherHood.Models.Comment

@{
    ViewData["Title"] = "Törlés";
}

<h1>Törlés</h1>

<h3>Biztosan törölni szeretnéd? </h3>
<div>
    <h4>Üzenet</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Kuldo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Szoveg)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Szoveg)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Törlés" class="btn btn-danger" /> |
        <a asp-action="details" asp-controller="messages"asp-route-id="@Model.MessageId">Mégse</a>
    </form>
</div>
