@model IEnumerable<MotherHood.Models.ApplicationUser>

@{
    ViewData["Title"] = "Felhasználók";
}

<h1>Felhasználók</h1>

<p>
    
</p>
<div class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var user in Model)
    {
        <div class="col mb-1">
            <div class="card">
                <div class="card-body">
                    <div class="col-12">
                        @user.Email
                    </div>
                    <div class="col-12">
                        @user.lastName @user.firstName
                    </div>
                    <div class="col-12">
                        @user.Megye.Nev
                    </div>
                </div>
                <a asp-action="Details" asp-controller="users" asp-route-id="@user.Id" class="stretched-link btn btn-outline-primary">
                    Megnézem
                </a>
            </div>

        </div>
    }
</div>